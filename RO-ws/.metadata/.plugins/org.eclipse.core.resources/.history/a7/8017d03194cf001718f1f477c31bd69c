
public class RandomSearch extends LocalSearch {

	int numberEvalMax;
	double fitnessMax;
	
	double bestFitness;
	
	public RandomSearch(Problem problem) {
		super(problem);
		
		numberEvalMax = 1000;
		fitnessMax = 30000;
	}
	
	public RandomSearch(Problem problem, int numberEvalMax, double fitnessMax) {
		super(problem);
		this.numberEvalMax = numberEvalMax;
		this.fitnessMax = fitnessMax;
	}
	
	public void setOptions(int numberEvalMax, double fitnessMax)
	{
		this.numberEvalMax = numberEvalMax;
		this.fitnessMax = fitnessMax;
	}

	@Override
	public void run(Solution s) throws Exception {
		Solution solutionBuffer = new Solution(s);
		
		boolean flag = true;
		double fitness = problem.eval(solutionBuffer);
		
		do {
			solutionBuffer.randomSolution();
			
			double tempFitness = problem.eval(solutionBuffer);

			if(tempFitness > fitness)
				fitness = tempFitness;
				
			
		} while (flag);
	}

}
